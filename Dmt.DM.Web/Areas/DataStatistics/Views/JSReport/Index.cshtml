@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}

@*@Scripts.Render("~/bundles/DataStatistics/Views/JSReport/Index")*@

<environment include="Development">
    <script src="~/view-js/datastatistics/jsreport/Index.js" asp-append-version="true"></script>
</environment>
<environment excludeclude="Development">
    <script src="~/view-js/datastatistics/jsreport/Index.min.js" asp-append-version="true"></script>
</environment>

<style type="text/css">
    #gridList_cb {
        text-align: left;
        width: 30px;
        padding-top: 0px;
        padding-bottom: 0px;
    }

    .ui-jqgrid .ui-jqgrid-view input[type="checkbox"] {
        margin-top: 6px;
        width: 18px;
        height: 18px;
        margin-bottom: 6px;
    }
</style>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-query" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_query()"><i class="fa fa-history"></i>刷新记录</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-create" authorize="yes" onclick="btn_create()"><i class="fa fa-plus"></i>生成记录</a></li>
                @*<li><a id="NF-reset" authorize="yes" onclick="btn_reset()"><i class="fa fa-history"></i>更新记录</a></li>*@
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除记录</a></li>
                <li class="split"></li>
                <li><a id="NF-download" authorize="yes" onclick="btn_download()"><i class="fa fa-cloud-download"></i>下载文件</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        @*<script>$('.toolbar').authorizeButton()</script>*@
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div id="txt_condition" class="btn-group">
                        <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择月份</a>
                        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu"></ul>
                    </div>
                </td>
                <td style="padding-left: 2px;">
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="请输入姓名、拼音码" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
