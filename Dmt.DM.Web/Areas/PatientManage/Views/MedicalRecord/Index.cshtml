<script>
    var currentPID = null;
    var documentID = null;
    $(function () {
        gridList();
        $.ajax({
            url: "/PatientManage/Patient/GetSelectJson",
            dataType: "json",
            async: false,
            success: function (data) {
                var tags = [];
                var first = {};
                first.id = "";
                first.text = "";
                tags.push(first);
                $.each(data, function (index, item) {
                    var obj = {};
                    obj.id = item.id;
                    obj.text = item.name + "(No." + item.recordNo + ")" + item.py;
                    tags.push(obj);
                }
                );

                $("#F_ParentId").bindSelect({
                    search: true,
                    data: tags,
                    change: function (e) {
                        currentPID = e.id;
                        $("#F_Pid").val(e.id)
                        $("#gridList").jqGrid('setGridParam', {
