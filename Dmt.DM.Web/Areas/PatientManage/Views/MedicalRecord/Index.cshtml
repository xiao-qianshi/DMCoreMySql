        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        if (!!keyValue) {
            $.deleteForm({
                url: "/PatientManage/MedicalRecord/DeleteForm",
                param: { keyValue: keyValue },
                success: function () {
