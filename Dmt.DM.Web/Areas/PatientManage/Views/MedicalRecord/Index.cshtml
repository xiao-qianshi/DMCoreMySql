                        }).trigger('reloadGrid');
                    }
                });
            }
        });

        editor = new Simditor({
            textarea: $('#content'),
            toolbar: ['title', 'bold', 'italic', 'underline', 'strikethrough', 'fontScale', '|', 'ol', 'ul', 'blockquote', 'table', 'hr', '|', 'indent', 'outdent', 'alignment'],
