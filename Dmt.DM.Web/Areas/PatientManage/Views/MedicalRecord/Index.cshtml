                    url: "/PatientManage/MedicalRecord/CheckMedicalRecord",
                    param: { keyValue: keyValue },
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
        });
    }

    function btn_print() {
