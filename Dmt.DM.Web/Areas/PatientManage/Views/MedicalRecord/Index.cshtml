                }
            })
        }
    }

    function btn_checked() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        var status = $("#gridList").jqGridRowValue().F_AuditFlag;
        if (status.indexOf("已签名") >= 0) {
            $.modalMsg("注：该项病历【已提交】！");
            return;
        }
