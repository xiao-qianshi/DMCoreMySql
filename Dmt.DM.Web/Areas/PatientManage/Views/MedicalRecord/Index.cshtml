            //    url: "/PatientManage/MedicalRecord/Form?keyValue=" + keyValue,
            //    width: "800px",
            //    height: "600px",
            //    callBack: function (iframeId) {
            //        top.frames[iframeId].submitForm();
            //    }
            //});

